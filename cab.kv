<CabScreen>:
    MDScreen:

        MDBoxLayout:
            orientation: 'vertical'
            MDTopAppBar:
                #title: "                                                                                                      Планшеты"
                use_overflow: True
                left_action_items:[['arrow-left-thin', lambda x: app.set_screensi("main")]]
                right_action_items:
                    [
                    #["home", lambda x: app.callback(x), "Home", "Home"],
                    #['account-circle', lambda x: nav_drawer.set_state("open"),"Account-circle","Account-circle"],
                    ["cart-outline", lambda x: app.set_screen('cart'), "Корзина", "Message star"],
                    ["message-question", lambda x: app.set_screens("helper"), "Поддержка", "Message question"],
                    ]
                md_bg_color:"#8B00FF"

            FloatLayout:
                canvas:
                    Color:
                        rgb:1,1,1
                    Ellipse:
                        source:"images/10.jpg"
                        size:280,280
                        pos:500,1000
                        #angel_start:0
            MDLabel:
                pos_hint:{"center_x":.5,"center_y":.5}
                text:"user_name\nuser_surname\nnick_name\nНомер телефона:********\nEmail:******\nИзменить пароль"
                theme_color:'Custom'
                font_style: "H4"
                text_color:"#FFFFFF"



    MDNavigationDrawer:
        id: nav_drawer

        ContentNavigationDrawer:
            id: content_drawer