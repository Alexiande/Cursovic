#: import Window kivy.core.window.Window
<SettingsScreen>:
    MDScreen:
        MDBoxLayout:
            height:dp(1000)
            orientation: 'vertical'
            MDIconButton:
                icon:"arrow-left-thin"
                on_press: root.manager.current = 'main'
            MDLabel:
                text:"MOVA-это интернет-магазин электроники.\nДанный интернет магазин создан sweet_lucas для курсовой работы.\n\n\n2022"
                theme_text_color:"Custom"
                text_color:"#1B0B42"
                font_style:"H3"

<CartScreen>:
    MDScreen:
        MDBoxLayout:
            height:dp(1000)
            orientation: 'vertical'
            MDIconButton:
                icon:"arrow-left-thin"
                on_press: root.manager.current = 'main'
            MDBoxLayout:
                MDLabel:
                    pos_hint: {'x': .5,'y': .3}
                    text:"В корзине пока пусто"
                    theme_text_color:"Custom"
                    text_color:"#1B0B42"
                    font_style:"H3"
                    bold:True

<FilterScreen>:

    MDScreen:
        MDBoxLayout:
            #height:dp(1000)
            orientation: 'vertical'
            MDIconButton:
                icon:"arrow-left-thin"
                on_press: root.manager.current = 'main'
            MDBoxLayout:
                MDLabel:
                    pos_hint: {'x': .5,'y': .3}
                    text:"Фильтры"
                    theme_text_color:"Custom"
                    text_color:"#1B0B42"
                    font_style:"H3"
                    bold:True
            Carousel:
                id:slide
                MDFloatLayout:
                    MDTextField:
                        hint_text:"Цена до"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.5}
                    MDTextField:
                        hint_text:"Бренд"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.4}
                    MDTextField:
                        hint_text:"Сроки доставки"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.3}



