#: import Window kivy.core.window.Window
<InitScreen>:
    MDScreen:
        MDCard:
            size_hint:.45,.8
            pos_hint:{"center_x":.5,"center_y":.5}
            Carousel:
                id:slide
                MDFloatLayout:
                    MDTextField:
                        hint_text:"Почта или номер телефона"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.48}
                    MDTextField:
                        hint_text:"Пароль"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.36}
                    MDRaisedButton:
                        text:"Вход"
                        size_hint_x:.39
                        pos_hint:{'center_x':.7,'center_y':.2}
                        theme_color:'Custom'
                        font_style: "Subtitle1"
                        text_color:"#FFFFFF"
                        md_bg_color:"#8B00FF"
                        line_color:"#8B00FF"
                        on_press: root.manager.current = "main"
        MDLabel:
            text:"Вход"
            bold:True
            pos_hint:{"center_x":.92,"center_y":.8}
            font_style:"H4"

<MenuScreen>:
    MDBoxLayout:
        orientation:'vertical'
        MDScreen:
            canvas.after:
                Color:
                    rgba:.2,.2,.2,.5-(root.animation_constant/100)
                Ellipse:
                    size:dp(350)*(1-(root.animation_constant/100)),dp(40)
                    pos:self.pos[0]+(Window.width/2)-(dp(180)*(1-(root.animation_constant/100)))/2,self.pos[1]
            RelativeLayout:
                Image:
                    source:'images/icons.png'
                    size_hint:None,None
                    size:'700dp','700dp'
                    pos_hint:{'center_x':.5,'center_y':.5+((root.animation_constant*2)/(Window.height))}
        MDBoxLayout:
            orientation:'vertical'
            spacing:'20dp'
            padding:'20dp'
            MDBoxLayout:
                size_hint_y:None
                height:dp(100)
            MDFillRoundFlatButton:
                text:'Вход'
                font_style:'H4'
                pos_hint:{'center_x':.5,'center_y':.5}
                size_hint_x:1
                md_bg_color:1,20/255,147/255,1
                on_press: root.manager.current = "init"
            MDLabel:
                text:'ИЛИ'
                halign:"center"
                font_style:'H5'
            MDTextButton:
                text:'Регистрация'
                font_style:'H4'
                pos_hint:{'center_x':.5,'center_y':.5}
                theme_text_color:'Custom'
                text_color:68/255,166/255,198/255,1
                on_press: root.manager.current = "in"
            MDBoxLayout:
                size_hint_x:None
                width:"180sp"
                pos_hint:{'center_x':.5}
                spacing:dp(20)
                RectangularRippleImage
                    source:"images/vk.png"
                RectangularRippleImage
                    source:"images/facebook.png"
                RectangularRippleImage:
                    source:"images/google.png"
<InScreen>:
    MDScreen:
        MDCard:
            size_hint:.45,.8
            pos_hint:{"center_x":.5,"center_y":.5}
            Carousel:
                id:slide
                MDFloatLayout:
                    MDTextField:
                        hint_text:"Имя"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.48}
                    MDTextField:
                        hint_text:"Фамилия"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.36}
                    MDTextField:
                        hint_text:"Никнейм"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.24}
                    MDLabel:
                        text:"Далее"
                        size_hint_x:.39
                        pos_hint:{'center_x':.7,'center_y':.2}
                MDFloatLayout:
                    MDLabel:
                        text:"Сфотографируйтесь для аватара"
                        font_style:'H6'
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.48}
                    MDRectangleFlatButton:
                        text:"Сделать фото"
                        on_press: root.manager.current = "camera"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.24}
                        font_style:'H4'
                        theme_text_color:'Custom'
                        text_color: "#FFFFFF"
                        icon_color:"#FFFFFF"
                        font_style: "Subtitle1"
                        md_bg_color:"#8B00FF"
                        line_color:"#8B00FF"
                MDFloatLayout:
                    MDTextField:
                        hint_text:"Email"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.48}
                    MDTextField:
                        hint_text:"Номер телефона"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.36}
                    MDLabel:
                        text:"Далее"
                        size_hint_x:.39
                        pos_hint:{'center_x':.7,'center_y':.2}
                MDFloatLayout:
                    MDTextField:
                        hint_text:"Пароль"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.48}
                        password: True
                    MDTextField:
                        hint_text:"Повторить пароль"
                        size_hint_x:.8
                        pos_hint:{'center_x':.5,'center_y':.36}
                        password:True
                    MDRaisedButton:
                        text:"Зарегистрироваться"
                        size_hint_x:.39
                        pos_hint:{'center_x':.7,'center_y':.2}
                        theme_color:'Custom'
                        font_style: "Subtitle1"
                        text_color:"#FFFFFF"
                        md_bg_color:"#8B00FF"
                        line_color:"#8B00FF"
                        on_press: root.manager.current = "main"
    MDLabel:
        text:"Регистрация"
        bold:True
        pos_hint:{"center_x":.92,"center_y":.8}
        font_style:"H4"
    MDLabel:
        text:"Имя"
        pos_hint:{"center_x":.840,"center_y":.7}
        font_style:"H6"
    MDIconButton:
        icon:"numeric-1-circle"
        pos_hint:{"center_x":.35,"center_y":.65}
        user_font_size:"35sp"
    MDProgressBar:
        size_hint_x:.3
        pos_hint:{"center_x":.50,"center_y":.65}
    MDLabel:
        text:"Аватар"
        pos_hint:{"center_x":.930,"center_y":.7}
        font_style:"H6"
    MDIconButton:
        icon:"numeric-2-circle"
        pos_hint:{"center_x":.45,"center_y":.65}
        user_font_size:"35sp"
    MDLabel:
        text:"Контакты"
        pos_hint:{"center_x":1.02,"center_y":.7}
        font_style:"H6"
    MDIconButton:
        icon:"numeric-3-circle"
        pos_hint:{"center_x":.55,"center_y":.65}
        user_font_size:"35sp"
    MDLabel:
        text:"Пароль"
        pos_hint:{"center_x":1.12,"center_y":.7}
        font_style:"H6"
    MDIconButton:
        icon:"numeric-4-circle"
        pos_hint:{"center_x":.65,"center_y":.65}
        user_font_size:"35sp"




